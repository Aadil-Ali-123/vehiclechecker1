<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="1"
    android:rowCount="12"
    android:background="@color/design_default_color_background">
    <!-- Scroll View to allow for Scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="12">

            <!-- ImageView For Header -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="0dp"
                app:srcCompat="@drawable/topbar"
                android:layout_marginTop="-36dp" />
            <!-- TextView for Title -->
            <TextView
                android:id="@+id/mainTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Vehicle Specification:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"

                />
            <!-- TextView for Registration Number-->
            <TextView
                android:id="@+id/regnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="23dp"
                android:background="@drawable/border"
                android:layout_margin="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"

                />
            <!-- TextView for Make -->
            <TextView
                android:id="@+id/make"
                android:text="Make: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Model -->
            <TextView
                android:id="@+id/model"
                android:text="Model: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Colour -->
            <TextView
                android:id="@+id/colour"
                android:text="Model Details: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Year -->
            <TextView
                android:id="@+id/year"
                android:text="Year: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Engine Size -->
            <TextView
                android:id="@+id/enginesize"
                android:text="Engine Size: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Fuel Type -->
            <TextView
                android:id="@+id/fueltype"
                android:text="Fuel Type: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Body Type -->
            <TextView
                android:id="@+id/bodytype"
                android:text="Body Type: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Euro Status -->
            <TextView
                android:id="@+id/eurostatus"
                android:text="Euro Status: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- Button to go back to prev activity -->
            <Button
                android:id="@+id/backbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/customBlue"
                android:padding="16dp"
                android:text="Back"
                android:textSize="16dp"
                android:textStyle="bold" />

        </GridLayout>
    </ScrollView>
</GridLayout>