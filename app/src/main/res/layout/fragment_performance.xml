<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Performance"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Allow for Scroll-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Image View for Header -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="0dp"
                app:srcCompat="@drawable/topbar"
                android:layout_marginTop="-36dp" />
            <!-- TextView for Title -->
            <TextView
                android:id="@+id/mainTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Performance:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"

                />
            <!-- TextView for Regestration Number -->
            <TextView
                android:id="@+id/regnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="23dp"
                android:background="@drawable/border"
                android:layout_margin="15dp"
                android:textStyle="bold" />

            <!-- TextView for Aspiration -->
            <TextView
                android:id="@+id/aspiration"
                android:text="Aspiration: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Cylinders -->

            <TextView
                android:id="@+id/cylinders"
                android:text="Cylinders: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Driving Axle -->
            <TextView
                android:id="@+id/axle"
                android:text="Driving Axle: "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Torque -->
            <TextView
                android:id="@+id/torque"
                android:text="Torque(Nm): "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Power -->
            <TextView
                android:id="@+id/power"
                android:text="Power(BHP): "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />
            <!-- TextView for Max Speed -->
            <TextView
                android:id="@+id/maxspeed"
                android:text="Max Speed(Mph): "
                android:padding="7dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/bottomshadow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />

            <!-- Button to return to previous Activity -->
            <Button
                android:id="@+id/backbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="16dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/customBlue"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>