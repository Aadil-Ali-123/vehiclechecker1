<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Garage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Image View for the Header-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="0dp"
        app:srcCompat="@drawable/topbar"
        android:layout_marginTop="-36dp"
        />
    <!-- Fragment for GoogleMaps Display-->
    <fragment
        android:id="@+id/googlemap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        />

    <!--TextView for Nearest Fuel Stations-->
    <TextView
        android:id="@+id/listOfGarages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearest Fuel Stations:"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_margin="10dp">

    </TextView>
    <!-- TextView for Nearby Fuel Station-->
    <TextView
        android:id="@+id/fuel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1: "
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="10dp">

    </TextView>
    <!-- TextView for Nearby Fuel Station-->
    <TextView
        android:id="@+id/fuel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2: "
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="10dp">

    </TextView>
    <!-- TextView for Nearby Fuel Station-->
    <TextView
        android:id="@+id/fuel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3: "
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="10dp">

    </TextView>
    <!-- TextView for Nearby Fuel Station-->
    <TextView
        android:id="@+id/fuel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4: "
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="10dp">

    </TextView>







</LinearLayout>